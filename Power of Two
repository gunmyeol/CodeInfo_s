class Solution {
    public boolean isPowerOfTwo(int n) {
        boolean result = true;
        
        for(int i = 0; i <= 31; i++) {
            if(n == Math.pow(2, i)) {
                break;
            }
            else {
                if(i == 31) {
                    result = false;
                }
                continue;
            }
        }
        return result;
    }
}
